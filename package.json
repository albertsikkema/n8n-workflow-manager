{
  "name": "n8n-workflow-manager",
  "version": "1.0.0",
  "description": "Chrome extension to backup and restore n8n workflows",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate-icons": "node generate-icons.js",
    "generate-promo": "node generate-promo.js",
    "generate-assets": "npm run generate-icons && npm run generate-promo"
  },
  "keywords": [
    "n8n",
    "workflow",
    "backup",
    "chrome-extension"
  ],
  "author": "Albert Sikkema",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "sharp": "^0.34.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!background.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  }
}
