{
  "manifest_version": 3,
  "name": "n8n Workflow Manager",
  "version": "1.0.0",
  "description": "Backup and restore n8n workflows with GitHub integration.",
  "author": "Albert Sikkema",
  "homepage_url": "https://github.com/albertsikkema/n8n-workflow-manager",
  "permissions": [
    "activeTab",
    "downloads",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://localhost/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
